<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/contentScreen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:minHeight="200dp"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/listView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="#ffffff"
                    android:dividerHeight="0dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/chat_content_border"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/container_typing"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingLeft="8dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">

                    <TextView
                        android:id="@+id/typingView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/label_typing" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/container_stickers"
                    android:layout_width="match_parent"
                    android:layout_height="225dp"
                    android:orientation="vertical"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clipToPadding="false"
                        android:scrollbars="none" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/container_actions"
                    android:layout_width="match_parent"
                    android:layout_height="104dp"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">

                    <LinearLayout
                        android:id="@+id/chat_media_container"
                        android:layout_width="72dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/addFilesImg"
                            android:layout_width="match_parent"
                            android:layout_height="72dp"
                            android:background="@drawable/image"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/photo" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/chat_video_container"
                        android:layout_width="72dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/addFilesVideo"
                            android:layout_width="match_parent"
                            android:layout_height="72dp"
                            android:background="@drawable/computer"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/video" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/chat_stckers_container"
                        android:layout_width="72dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/addStickerImg"
                            android:layout_width="match_parent"
                            android:layout_height="72dp"
                            android:background="@drawable/ic_sticker_action"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/label_chat_stickers" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/chat_gif_container"
                        android:layout_width="72dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/addGifImg"
                            android:layout_width="match_parent"
                            android:layout_height="72dp"
                            android:background="@drawable/ic_baseline_gif_24"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Add Gif" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/container_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="8dp">

                        <ImageView
                            android:id="@+id/previewImg"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/profile_default_cover"
                            android:scaleType="centerCrop"
                            emojicon:layout_constraintStart_toStartOf="parent"
                            emojicon:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/playVideo"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/video_play"
                            android:visibility="gone"
                            emojicon:layout_constraintBottom_toBottomOf="@+id/previewImg"
                            emojicon:layout_constraintEnd_toEndOf="@+id/previewImg"
                            emojicon:layout_constraintStart_toStartOf="@+id/previewImg"
                            emojicon:layout_constraintTop_toTopOf="@+id/previewImg" />

                        <ImageView
                            android:id="@+id/deleteImg"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="#83ffffff"
                            android:src="@drawable/ic_action_remove"
                            emojicon:layout_constraintEnd_toEndOf="@+id/previewImg"
                            emojicon:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llTime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:text="00:00"
                        android:textSize="22sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llChat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/container_actions_buttons"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/actionContainerImg"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="6dp"
                            android:background="@drawable/ic_open_container_action" />

                        <ImageView
                            android:id="@+id/emojiBtn"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="6dp"
                            android:background="@drawable/ic_emoji" />

                        <ImageView
                            android:id="@+id/ivMic"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="6dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_baseline_mic_24" />
                    </LinearLayout>

                    <github.ankushsachdeva.emojicon.EmojiconEditText
                        android:id="@+id/messageText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:hint="@string/placeholder_message"
                        android:inputType="none|text|textCapSentences|textMultiLine"
                        android:minHeight="50dp"
                        android:padding="10dp"
                        android:textSize="16dp"
                        emojicon:emojiconSize="32dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/sendMessage"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="6dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_action_send"
                            android:tint="@color/colorPrimary" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llCantReply"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="12dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="You cannot reply to this message. Please email us at support@yavedo.com for any questions. "
                        android:textSize="22sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/errorScreen"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/errorMsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:gravity="center"
                android:text="@string/error_data_loading" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/loadingScreen"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:id="@+id/progressBar5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
